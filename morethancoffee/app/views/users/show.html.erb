<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %> 
      </h1>
      Age: <%= @user.age %> <br>
      Looking for: <%= @user.lookingfor %> <br>
      Romantic preference: <%= @user.genderpref %><br>
      Events that <%=@user.name %> is attending: 
      				<ul>
      				<% @user.events.each do |event| %>
    				<li> <%= link_to event.name, event_path(event.id) %> </li>
             <div class = "email-button">
                    <%= form_for @email, url: {action: "update"} do |f| %>
                      <%= f.hidden_field :receiver_id, :value => @user.id %>
                      <%= f.hidden_field :event_id, :value => event.id %>
                      <%= f.submit "Email about this event!", class: "custom-button btn btn-small btn-primary" %>
                    <% end %> 
                  </div>
    				<% end %>
    				</ul>
    <%if @user == current_user%>
    	<%= link_to "Edit Profile", edit_user_path(current_user) %>
        &nbsp | &nbsp
    <% end %>
    	
    <%= link_to " Events", events_path %>
  </aside>
    </section>
    
   
</div>
